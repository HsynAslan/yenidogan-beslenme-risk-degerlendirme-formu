{$R *.dfm}

procedure TForm2.dsGun1DataChange(Sender: TObject; Field: TField);
begin
  if not Assigned(QryGun1) or not QryGun1.Active then Exit;

  if QryGun1.FieldByName('TARIH').IsNull then
    lblGun1Tarih.Caption := '--.--.----'
  else
    lblGun1Tarih.Caption :=
      FormatDateTime('dd.mm.yyyy',
        QryGun1.FieldByName('TARIH').AsDateTime
      );
end;


procedure TForm2.dsGun2DataChange(Sender: TObject; Field: TField);
begin
  if not Assigned(QryGun2) or not QryGun2.Active then Exit;

  if QryGun2.FieldByName('TARIH').IsNull then
    lblGun2Tarih.Caption := '--.--.----'
  else
    lblGun2Tarih.Caption :=
      FormatDateTime('dd.mm.yyyy',
        QryGun2.FieldByName('TARIH').AsDateTime
      );
end;


end.
